{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "instrata",
  "version": "0.0.0",
  "identifier": "com.instrata.instrata",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Instrata",
        "width": 800,
        "height": 600,
        "minWidth": 768,
        "minHeight": 512
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "homepage": "https://github.com/instrata/instrata#README",
    "shortDescription": "Instrata is a tool for creating step-by-step guides from automatic screenshots.",
    "longDescription": "Instrata helps users quickly document processes and workflows without manually capturing or organizing screenshots. It automatically captures relevant screenshots, allowing you to annotate, highlight, or blur content, and compile them into guides suitable for sharing, reporting, or internal documentation. This saves time and improves clarity when creating step-by-step instructions.",
    "publisher": "Instrata",
    "copyright": "Â© 2025 Instrata",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "license": "GPL-3.0-or-later",
    "licenseFile": "../LICENSE",
    "resources": [
      "templates/"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdDNUMyQjU3RDkxQTJDMDAKUldRQUxCclpWeXRjZkg3SEVmeWJEdmNuNElKM0l2YS9XOFFkdzc3MndpdnV2U2ZqZHVteXZvSkEK",
      "endpoints": [
        "https://github.com/instrata/instrata/releases/latest/download/updater.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
